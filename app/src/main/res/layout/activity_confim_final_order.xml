<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfimFinalOrderActivity">
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xac nhan don  hang"
        android:textSize="20dp"
        android:textColor="@color/purple_500"

        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        ></TextView>

    <EditText
        android:id="@+id/shippment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/txt"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:hint="ten cua  ban "

        ></EditText>
    <EditText
        android:id="@+id/shippment_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:hint="so dien thoa cua ban  "

        ></EditText>
    <EditText
        android:id="@+id/shippment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_phone_number"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:hint="dia chi nha cua  ban "

        ></EditText>
    <EditText
        android:id="@+id/shippment_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_address"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:hint="ten thanh pho  "

        ></EditText>

    <Button
        android:id="@+id/confirm_final_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:text="xac nhan "
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        ></Button>





</RelativeLayout>