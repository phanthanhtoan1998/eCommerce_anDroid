<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">
<ImageView
    android:id="@+id/product_image_details"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:scaleType="centerCrop"


    ></ImageView>
    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image_details"
        android:text="Ten san  pham"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="10dp"

        ></TextView>
    <TextView
        android:id="@+id/product_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_details"
        android:text="mo ta san  pham "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"

        ></TextView>

    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description_details"
        android:text="gia san pham"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"

        ></TextView>
<com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
    android:id="@+id/number_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    android:textSize ="16dp"
    app:initialNumber="1"
    app:finalNumber="10"
    android:layout_centerHorizontal="true"
android:layout_below="@+id/product_price_details"
    android:gravity="center"
    android:layout_marginTop="10dp"
    ></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
<Button
    android:id="@+id/pd_add_to_card_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:background="@color/purple_500"
    android:layout_marginTop="15dp"
    android:layout_alignParentBottom="true"
    android:text="them san pham vao gio hang"
    android:textColor="@color/white"
    android:textSize="18dp"

    ></Button>

</RelativeLayout>
