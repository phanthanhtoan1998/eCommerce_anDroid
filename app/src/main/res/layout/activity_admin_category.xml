<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">


    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="them san pham moi "
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"></TextView>
<LinearLayout
    android:id="@+id/lineae_category_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/slogan_category"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="45dp"


    >

    <ImageView
        android:id="@+id/t_shirts"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/banhmi"
        ></ImageView>
    <ImageView
        android:id="@+id/sports_t_shirts"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/sports"
        ></ImageView>

    <ImageView
        android:id="@+id/female_dresses"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/female_dresses"
        ></ImageView>
    <ImageView
        android:id="@+id/sweather"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/sweather"
        ></ImageView>

</LinearLayout>
    <LinearLayout
        android:id="@+id/lineae2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineae_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"


        >

        <ImageView
            android:id="@+id/glasses_wallets"
            android:layout_width="match_parent"
            android:layout_height="80dp"
                android:src="@drawable/banhmi2"
            ></ImageView>
        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"
            ></ImageView>

        <ImageView
            android:id="@+id/hast_caps"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hats"
            ></ImageView>
        <ImageView
            android:id="@+id/shoess"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"></ImageView>

    </LinearLayout>

<LinearLayout
android:id="@+id/lineae3_category_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/lineae2_category_layout"
android:orientation="horizontal"
android:layout_centerHorizontal="true"
android:layout_marginTop="45dp"


    >

<ImageView
    android:id="@+id/headphoness_handfree"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:src="@drawable/banhmi3"
    ></ImageView>
<ImageView
    android:id="@+id/laptop_pc"
    android:layout_width="90dp"
    android:layout_height="80dp"
    android:src="@drawable/laptops"
    ></ImageView>

<ImageView
    android:id="@+id/watches"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/watches"
    ></ImageView>
<ImageView
    android:id="@+id/mobilephones"
    android:layout_width="70dp"
    android:layout_height="80dp"
    android:src="@drawable/mobiles"
    android:layout_marginStart="26dp"
    android:layout_marginLeft="26dp"></ImageView>

</LinearLayout>

</RelativeLayout>